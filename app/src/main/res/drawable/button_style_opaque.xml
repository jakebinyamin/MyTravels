<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorButtonPressed" />
            <corners android:radius="25dp" />
            <size
                android:width="200dp"
                android:height="30dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorButton_Opaque" />
            <corners android:radius="25dp" />
            <size
                android:width="200dp"
                android:height="30dp" />
            <padding
                android:bottom="3dp"
                android:top="3dp"
                android:left="10dp"
                android:right="30dp"/>
        </shape>
    </item>

</selector>